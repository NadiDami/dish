<h2>Edit this entry!</h2>

<%= form_for :restaurant, url: restaurant_path(@restaurant), method: :patch do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit 'Submit changes' %>
  </p>

<% end %>

<%= link_to 'Back', restaurant_path(@restaurant) %>