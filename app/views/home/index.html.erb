<% if user_signed_in? %>
  <p><%= "Hi, #{current_user.email}" %></p>
<% end %>

<h1>Dish</h1>

<% @restaurants.each do |restaurant| %>
  <h2><%= link_to restaurant.name, restaurant %></h2>
  <h3><%= restaurant.city %></h3>
  <p><%= restaurant.description %></p>
<% end %>

<%= link_to 'Add new restaurant', new_restaurant_path %>